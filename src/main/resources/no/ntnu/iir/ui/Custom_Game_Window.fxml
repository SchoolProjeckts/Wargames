<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="no.ntnu.iir.ui.CustomGameWindowController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #0B0B45;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="80.0" fitWidth="85.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Two_Sword_Crossing.png" />
               </image>
            </ImageView>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="CUSTOM GAME">
               <font>
                  <Font name="Goudy Old Style" size="50.0" />
               </font>
            </Text>
            <ImageView fitHeight="80.0" fitWidth="85.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Two_Sword_Crossing.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1280.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Army One">
                     <font>
                        <Font name="Copperplate Gothic Bold" size="22.0" />
                     </font>
                  </Text>
                  <MFXTextField fx:id="armyOneText" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="36.0" prefWidth="200.0">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </MFXTextField>
                  <MFXButton onAction="#findFileArmyOneButtonPressed" prefHeight="46.0" prefWidth="151.0" style="-fx-background-color: green;" text="Find File" textFill="WHITE">
                     <font>
                        <Font size="22.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="eli-folder" />
                     </graphic>
                  </MFXButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Army Two">
                     <font>
                        <Font name="Copperplate Gothic Bold" size="22.0" />
                     </font>
                  </Text>
                  <MFXTextField fx:id="armyTwoText" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="36.0" prefWidth="200.0">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </MFXTextField>
                  <MFXButton onAction="#findFileArmyTwoButtonPressed" prefHeight="46.0" prefWidth="151.0" style="-fx-background-color: green;" text="Find File" textFill="WHITE">
                     <font>
                        <Font size="22.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="eli-folder" />
                     </graphic>
                  </MFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0" BorderPane.alignment="CENTER">
         <children>
            <MFXButton onAction="#cancelButtonPressed" prefHeight="48.0" prefWidth="253.0" style="-fx-background-color: red;" text="Cancel" textFill="WHITE">
               <font>
                  <Font size="22.0" />
               </font>
            </MFXButton>
            <MFXButton onAction="#playButtonPressed" prefHeight="48.0" prefWidth="253.0" style="-fx-background-color: green;" text="Play" textFill="WHITE">
               <font>
                  <Font size="22.0" />
               </font>
            </MFXButton>
            <MFXButton onAction="#infoButtonPressed" prefHeight="48.0" prefWidth="253.0" style="-fx-background-color: #04D2D5;" text="Info" textFill="WHITE">
               <font>
                  <Font size="22.0" />
               </font>
            </MFXButton>
         </children>
      </HBox>
   </bottom>
